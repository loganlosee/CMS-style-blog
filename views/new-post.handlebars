<div class="new-post-form">
    <h2>Create New Post</h2>
    <form action="/posts/create" method="POST">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" id="postTitle" name="title" required placeholder="Enter post title">
        </div>
        <div class="form-group">
            <label for="postContent">Content</label>
            <textarea id="postContent" name="content" required placeholder="Write your post content here..."></textarea>
        </div>
        <button type="submit" class="btn">Submit Post</button>
    </form>
</div>

<script src="/js/add-post.js"></script>
